#!/bin/sh
out=/feedback/out
err=/feedback/err
user=nobody
while [ $# -gt 0 ]; do
    case "$1" in
        -o) out=$2 ; shift 2 ;;
        -e) err=$2 ; shift 2 ;;
        -u) user=$2 ; shift 2 ;;
        --) shift ; break ;;
        -*) echo "ERROR: Invalid option '$1' for $0" >&2 ; exit 64 ;;
        *) break ;;
    esac
done

[ $# -gt 0 ] || { echo "No command to execute." >&2; exit 64; }

unset REC SID
if [ "$user" = "root" ]; then
    exec "$@" >> "$out" 2>> "$err"
fi

chown -R $user . >&2
asuser -u $user -- \
    "$@" >> "$out" 2>> "$err"
RES=$?
chown -R root . >&2
exit $RES